generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  name         String?
  password     String?
  available    Boolean        @default(true)
  role         String[]       @default(["user"])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  provider     String?
  providerId   String?
  picture      String?
  pets         Pets[]
  userInCharge UserInCharge[]

  @@map("users")
}

model Pets {
  id           String         @id @default(uuid())
  name         String
  type         String
  breed        String
  available    String[]       @default(["Waiting"])
  description  String
  imageUrl     String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  userInCharge UserInCharge[]

  @@map("pets")
}

model UserInCharge {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  petId     String
  pet       Pets     @relation(fields: [petId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String

  @@map("users_in_charge")
}
